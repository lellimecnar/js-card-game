{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "webpack",
    "build:docs": "lerna run --scope @card-game/site build",
    "build:nert": "yarn build --config-name nert",
    "lint": "eslint ./packages/*/src",
    "test": "jest ./packages/*/src",
    "watch:docs": "lerna run --scope @card-game/site start --stream",
    "release": "yarn lint && yarn test && yarn build && lerna publish"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "change-case": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "webpack": "^4.24.0",
    "webpack-cli": "^3.1.2"
  }
}
